{
	"name": "@blog/site",
	"version": "0.0.1",
	"private": true,
	"description": "Blog website",
	"repository": {
		"type": "git",
		"url": "https://github.com/pawelblaszczyk5/pawelblaszczyk.dev",
		"directory": "apps/site"
	},
	"type": "module",
	"scripts": {
		"build": "tokenami --output ./app/tokenami.css --minify && next build",
		"dev": "tokenami --output ./app/tokenami.css --watch & next dev",
		"lint": "eslint . --ext ts,tsx,js,jsx,cjs,mjs --report-unused-disable-directives --ignore-path ../../.gitignore",
		"lint:fix": "eslint . --ext ts,tsx,js,jsx,cjs,mjs --report-unused-disable-directives --ignore-path ../../.gitignore --fix",
		"start": "next start",
		"typecheck": "tsc --project tsconfig.ci.json & tsc --project tsconfig.tooling.json"
	},
	"imports": {
		"#src/*": "./*"
	},
	"dependencies": {
		"@blog/css": "workspace:0.0.1",
		"@blog/css-reset": "workspace:0.0.1",
		"@blog/data": "workspace:0.0.1",
		"@blog/database": "workspace:0.0.1",
		"@blog/design-system": "workspace:0.0.1",
		"@blog/environment": "workspace:0.0.1",
		"@blog/theme": "workspace:0.0.1",
		"next": "14.1.1-canary.76",
		"postcss": "~8.4.35",
		"postcss-import": "~16.0.1",
		"react": "18.3.0-canary-3bcd2de01-20240227",
		"react-dom": "18.3.0-canary-3bcd2de01-20240227"
	},
	"devDependencies": {
		"@blog/eslint-config": "workspace:0.0.1",
		"@blog/typescript-config": "workspace:0.0.1",
		"@tokenami/dev": "^0.0.30",
		"@tokenami/ts-plugin": "^0.0.30",
		"@types/node": "^20.11.20",
		"@types/react": "^18.2.60",
		"@types/react-dom": "^18.2.19",
		"typescript": "5.4.0-beta"
	}
}
