{
	"name": "@pawelblaszczyk.dev/database",
	"version": "0.0.1",
	"private": true,
	"description": "Database instance",
	"repository": {
		"type": "git",
		"url": "https://github.com/pawelblaszczyk5/pawelblaszczyk.dev",
		"directory": "packages/database"
	},
	"type": "module",
	"imports": {
		"#src/*": "./src/*"
	},
	"exports": {
		".": {
			"types": "./src/database.ts",
			"import": "./src/database.ts"
		},
		"./schema": {
			"types": "./src/schema.ts",
			"import": "./src/schema.ts"
		}
	},
	"scripts": {
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push-local": "drizzle-kit push",
		"lint": "eslint . --report-unused-disable-directives",
		"lint:fix": "eslint . --report-unused-disable-directives --fix",
		"typecheck": "tsc --build"
	},
	"dependencies": {
		"@libsql/client": "~0.6.2",
		"@pawelblaszczyk.dev/config": "workspace:*",
		"drizzle-orm": "~0.31.1",
		"valibot": "0.31.0-rc.12"
	},
	"devDependencies": {
		"@pawelblaszczyk.dev/eslint-config": "workspace:*",
		"@pawelblaszczyk.dev/typescript-config": "workspace:*",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/node": "^20.14.1",
		"drizzle-kit": "^0.22.2",
		"typescript": "^5.4.5"
	}
}
