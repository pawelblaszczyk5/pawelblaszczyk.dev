{
	"$schema": "https://commonality.co/config.json",
	"checks": {
		"*": [
			"recommended/has-readme",
			"recommended/has-codeowner",
			"recommended/valid-package-name",
			"recommended/unique-dependency-types",
			"recommended/sorted-dependencies",
			"recommended/matching-dev-peer-versions",
			"recommended/consistent-external-version",
			"recommended/extends-repository-field",
			"@blog/commonality/has-description-field"
		],
		"typed": [
			"@blog/commonality/extends-tsconfig-core",
			"@blog/commonality/has-typecheck-script",
			"@blog/commonality/has-typescript"
		],
		"buildable": ["@blog/commonality/has-build-script"],
		"lintable": ["@blog/commonality/has-lint-script"],
		"react": ["@blog/commonality/has-react", "@blog/commonality/has-react-dom"]
	},
	"constraints": {
		"*": { "disallow": ["application"] }
	}
}
