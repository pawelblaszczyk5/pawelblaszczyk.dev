{
	"name": "@blog/monorepo",
	"private": true,
	"version": "0.0.1",
	"description": "Root workspace",
	"repository": "https://github.com/pawelblaszczyk5/pawelblaszczyk.dev",
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"commonality:check": "commonality check",
		"commonality:constrain": "commonality constrain",
		"commonality:studio": "commonality studio",
		"dev": "turbo run dev",
		"format": "prettier \".\" --check",
		"format:fix": "prettier \".\" --write",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"sort-package-json": "sort-package-json \"package.json\" \"packages/*/package.json\" \"tooling/*/package.json\" --check",
		"sort-package-json:fix": "sort-package-json \"package.json\" \"packages/*/package.json\" \"tooling/*/package.json\"",
		"spellcheck": "cspell \"**\" --show-context --show-suggestions",
		"typecheck": "turbo run typecheck",
		"update-dependencies": "taze major -Irw",
		"syncpack": "syncpack lint",
		"syncpack:fix": "syncpack fix-mismatches"
	},
	"devDependencies": {
		"@blog/commonality": "workspace:0.0.1",
		"commonality": "^0.2.56",
		"commonality-checks-recommended": "^0.0.33",
		"cspell": "^8.3.2",
		"prettier": "^3.2.5",
		"sort-package-json": "^2.7.0",
		"syncpack": "^12.3.0",
		"taze": "^0.13.3",
		"turbo": "^1.12.3",
		"typescript": "5.4.0-beta"
	},
	"packageManager": "pnpm@8.15.2",
	"engines": {
		"node": "20.10.0",
		"pnpm": "8.15.2"
	},
	"engineStrict": true,
	"pnpm": {
		"peerDependencyRules": {
			"allowedVersions": {
				"react": "18.3.0-canary-2cd19ed1d-20240207",
				"react-dom": "18.3.0-canary-2cd19ed1d-20240207"
			}
		},
		"overrides": {
			"react": "18.3.0-canary-2cd19ed1d-20240207",
			"react-dom": "18.3.0-canary-2cd19ed1d-20240207",
			"typescript": "5.4.0-beta"
		}
	}
}
